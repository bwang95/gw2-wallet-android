<?xml version="1.0" encoding="utf-8"?>
<com.cerridan.gw2wallet.view.CharacterItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/global_margin"
    >
  <ImageView
      android:id="@+id/iv_character_class_icon"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:contentDescription="@string/class_icon_description"
      />
  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical"
      >
    <TextView
        android:id="@+id/tv_character_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Firstname Lastname, Using some title"
        />
    <TextView
        android:id="@+id/tv_character_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/global_line_spacing"
        android:visibility="gone"
        tools:text="Level 80 Male Sylvari Elementalist"
        tools:visibility="visible"
        />
    <TextView
        android:id="@+id/tv_character_guild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/global_line_spacing"
        android:visibility="gone"
        tools:text="Some Guild Name"
        tools:visibility="visible"
        />
  </LinearLayout>
</com.cerridan.gw2wallet.view.CharacterItemView>