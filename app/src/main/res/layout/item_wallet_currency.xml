<?xml version="1.0" encoding="utf-8"?>
<com.cerridan.gw2wallet.view.CurrencyItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_selector"
    android:orientation="vertical"
    android:padding="@dimen/global_margin"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <ImageView
        android:id="@+id/iv_currency_icon"
        android:layout_width="@dimen/currency_icon_size"
        android:layout_height="@dimen/currency_icon_size"
        android:contentDescription="@string/currency_icon_description"
        />
    <TextView
        android:id="@+id/tv_currency_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/global_margin"
        android:layout_marginRight="@dimen/global_margin"
        tools:text="Ascalonian Tears"
        />
    <TextView
        android:id="@+id/tv_currency_qty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        tools:text="10,240g 26s 37c"
        />
  </LinearLayout>
  <TextView
      android:id="@+id/tv_currency_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/global_margin"
      android:lineSpacingExtra="@dimen/global_line_spacing"
      android:visibility="gone"
      tools:text="The primary currency of Tyria. Spent at vendors throughout the world."
      tools:visibility="visible"
      />
</com.cerridan.gw2wallet.view.CurrencyItemView>